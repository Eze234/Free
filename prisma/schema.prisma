generator client {
  provider = "prisma-client"
  output   = "../core/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Kick {
  id          Int     @id @default(autoincrement())
  broadcaster String  @unique
  is_live     Boolean @default(false)
}

model Instagram {
  id       Int           @id @default(autoincrement())
  username String        @default("eze")
  posts    IgPost[]
  stories  IgStory[]
}

model Spotify {
  id             Int               @id @default(autoincrement())
  playlist       String            @unique
  recomendations Recomendation[]
}

model Tag {
  id        Int    @id @default(autoincrement())
  name      String
  content   String
  invocator String

  @@unique([name, invocator])
}

model YouTube {
  id         Int    @id @default(autoincrement)
  url        YtURL[]
}

/* Vars */

model YtURL {
  id         Int       @id @default(autoincrement())
  youtube    YouTube   @relation(fields: [youtubeId], references: [id])
  url        String

}

model IgPost {
  id          Int       @id @default(autoincrement())
  instagram   Instagram @relation(fields: [instagramId], references: [id])
  instagramId Int
  post        String
}

model IgStory {
  id          Int       @id @default(autoincrement())
  instagram   Instagram @relation(fields: [instagramId], references: [id])
  instagramId Int
  story       String
}

model Recomendation {
  id        Int     @id @default(autoincrement())
  spotify   Spotify @relation(fields: [spotifyId], references: [id])
  spotifyId Int
  url       String  @unique
}